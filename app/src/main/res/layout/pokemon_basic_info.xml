<LinearLayout android:id="@+id/topPartPokeDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_poke_details"
    android:orientation="vertical"
    android:paddingTop="180dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pokeWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_weight="0.7"
            android:fontFamily="@font/ryogothic"
            android:textColor="#3F7C80"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:background="#B3B3B3" />


        <TextView
            android:id="@+id/pokeBaseXP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ryogothic"
            android:textColor="#3F7C80"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:background="#B3B3B3" />

        <TextView
            android:id="@+id/pokeHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ryogothic"
            android:textColor="#3F7C80"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pokeWeightTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:layout_weight="0.9"
            android:fontFamily="@font/ryogothic"
            android:text="WEIGHT"
            android:textColor="#759EA1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pokeBaseXPTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ryogothic"
            android:text="EXP"
            android:textColor="#759EA1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pokeHeightTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:fontFamily="@font/ryogothic"
            android:text="HEIGHT"
            android:textColor="#759EA1"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>