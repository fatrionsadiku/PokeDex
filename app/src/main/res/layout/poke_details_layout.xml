<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pokedetailsbg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!-- Pokemon photo -->


    <!-- Pokemon name -->


    <LinearLayout
        android:id="@+id/topPartPokeDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/top_poke_details"
        android:orientation="vertical"
        android:paddingTop="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pokeWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_weight="0.7"
                android:fontFamily="@font/ryogothic"
                android:textColor="#3F7C80"
                android:textSize="20sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#B3B3B3"
                android:layout_marginEnd="30dp"/>


            <TextView
                android:id="@+id/pokeBaseXP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ryogothic"
                android:textColor="#3F7C80"
                android:textSize="20sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#B3B3B3"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/pokeHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ryogothic"
                android:textColor="#3F7C80"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pokeWeightTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="43dp"
                android:layout_weight="0.9"
                android:fontFamily="@font/ryogothic"
                android:text="WEIGHT"
                android:textColor="#759EA1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pokeBaseXPTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ryogothic"
                android:text="EXP"
                android:textColor="#759EA1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pokeHeightTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="@font/ryogothic"
                android:text="HEIGHT"
                android:textColor="#759EA1"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/pokemon_photo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pokemon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:fontFamily="@font/ryogothic"
        android:textColor="#3F7C80"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pokemon_photo" />


</androidx.constraintlayout.widget.ConstraintLayout>
