<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        tools:layout="@layout/fragment_home"
        android:name="com.example.pokedex.ui.HomeFragment"
        android:label="homeFrament">
        <action
            android:id="@+id/action_homeFragment_to_pokeDetailsFragment2"
            app:destination="@id/pokeDetailsFragment2" />
    </fragment>
    <fragment
        android:id="@+id/pokeDetailsFragment2"
        tools:layout="@layout/poke_details_layout"
        android:name="com.example.pokedex.ui.PokeDetailsFragment"
        android:label="PokeDetailsFragment" >
        <argument
            android:name="pokemon_name"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="pokemonUrl"
            app:argType="string"
            app:nullable="true" />
    </fragment>

</navigation>